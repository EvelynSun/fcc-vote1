extends ../layout

block content
  .col-sm-offset-5
    h3 Create a New Poll
  
  form.form-horizontal(action='/polls/create', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='title') Poll Name
      .col-sm-7
        input.form-control(type='text', name='title', id='title', value='')
    .form-group
      label.col-sm-3.control-label(for='options') Options
      .col-sm-7
        textarea.form-control(name='options',id='options',placeholder='seperated by new line',style='height:300px')
    .form-group
      .col-sm-offset-6.col-sm-3
        button.btn.btn-primary(type='submit') Submit